{
	"name": "paws",
	"version": "1.0.0",
	"description": "Lightweight and simple static site template for researchers in the Digital Humanities",
	"homepage": "https://github.com/codexfelis/paws-template",
	"license": "MIT",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"check": "svelte-check --jsconfig ./jsconfig.json",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. .",
		"prepare": "husky install",
		"postbuild": "node scripts/sitemap.js"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "next",
		"@sveltejs/kit": "next",
		"@typescript-eslint/eslint-plugin": "^5.22",
		"autoprefixer": "^10.4",
		"canvas": "^2.9",
		"cssnano": "^5.1",
		"eslint": "^8.14",
		"eslint-config-prettier": "^8.5",
		"eslint-plugin-svelte3": "^3.4",
		"husky": "^7.0",
		"mdsvex": "^0.10",
		"postcss": "^8.4",
		"postcss-load-config": "^3.1",
		"prettier": "^2.6",
		"prettier-plugin-svelte": "^2.7",
		"rehype-external-links": "^1.0",
		"rehype-slug": "^5.0",
		"remark-reading-time": "^1.0",
		"svelte": "^3.48",
		"svelte-check": "^2.7",
		"svelte-preprocess": "^4.10",
		"xmlbuilder2": "^3.0"
	},
	"type": "module",
	"engines": {
		"node": ">=14.13"
	}
}
